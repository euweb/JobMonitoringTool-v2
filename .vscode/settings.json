{
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.compile.nullAnalysis.mode": "automatic",

  // CRITICAL: Force VS Code to use -parameters flag and disable auto compilation
  "java.jdt.ls.vmargs": "-Dfile.encoding=UTF-8 -Xmx2G",
  "java.compile.enablePreviewFeatures": false,
  "java.autobuild.enabled": false,
  "java.compile.compileOnSave.enabled": false,

  // Force Maven to be used for compilation instead of VS Code internal compiler
  "java.eclipse.buildship.gradle.enabled": false,
  "java.maven.updateSnapshots": false,

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Java Debug Settings
  "java.debug.settings.enableRunDebugCodeLens": true,
  "java.debug.settings.onBuildFailureProceed": true,
  "java.debug.settings.showQualifiedNames": true,
  "java.debug.settings.showLogicalStructure": true,
  "java.debug.settings.enableHotCodeReplace": true,
  "java.debug.logLevel": "warn",

  // Spring Boot specific
  "spring-boot.ls.java.boot-version": "3.2.1",
  "spring-boot.ls.java.live-information.fetch-data.enabled": true,

  // Auto save for debugging
  "files.autoSave": "onFocusChange",

  // File associations
  "files.associations": {
    "*.yml": "yaml"
  }
}
